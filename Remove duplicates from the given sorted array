class Solution {
    // Function to remove duplicates from the given sorted array.
    ArrayList<Integer> removeDuplicates(int[] arr) {
        ArrayList<Integer> l = new ArrayList<>();
        int n = arr.length;

        if (n == 0) return l;

        for (int i = 0; i < n - 1; i++) {
            if (arr[i] != arr[i + 1]) {
                l.add(arr[i]);
            }
        }

        // Add the last element (it wasn't added in the loop)
        l.add(arr[n - 1]);

        return l;
    }
}
